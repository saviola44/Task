<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/text_iron</item>
        <item name="android:textColorSecondary">@color/text_iron</item>
        <item name="colorAccent">@color/bckg_iron</item>
    </style>

    <style name="ProgressBarTheme" parent="AppTheme">
        <item name="colorControlActivated">@color/bckg_mako</item>
    </style>
</resources>
